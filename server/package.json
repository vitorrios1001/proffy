{
  "name": "server",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc && cp .env dist/.env",
    "start": "NODE_ENV=production node dist/src/index.js",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "dev2": "NODE_ENV=development tsnd --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "knex:migrate": "knex --knexfile knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "pretest": "make run-test && NODE_ENV=test knex --knexfile knexfile.ts migrate:latest",
    "test": "NODE_ENV=test jest --coverage",
    "posttest": "make stop-test"
  },
  "dependencies": {
    "apisauce": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "knex": "^0.21.2",
    "logform": "^2.2.0",
    "morgan": "^1.10.0",
    "pg": "^8.3.0",
    "sqlite3": "^5.0.0",
    "uuidv4": "^6.2.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv-safe": "^8.1.1",
    "@types/express": "^4.17.7",
    "@types/factory-girl": "^5.0.2",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.0",
    "@types/source-map-support": "^0.5.3",
    "@types/supertest": "^2.0.10",
    "eslint": "^7.7.0",
    "factory-girl": "^5.0.4",
    "faker": "^5.1.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.12.1",
    "typescript": "^3.9.7"
  }
}
